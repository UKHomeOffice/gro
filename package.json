{
  "name": "GRO",
  "version": "0.1.8",
  "main": "app.js",
  "description": "The General Register Office DSP form",
  "license": "GPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/gro/"
  },
  "readme": "./README.md",
  "scripts": {
    "start": "node .",
    "stop": "pkill --signal SIGINT gro",
    "dev": "hof-build watch",
    "test": "NODE_ENV=test mocha",
    "build": "hof-build",
    "test:acceptance": "cd acceptance_tests/; bundle install && cucumber",
    "test:ci": "npm run lint && npm run style && npm run test",
    "lint": "eslint .",
    "cover": "istanbul cover _mocha && istanbul check-coverage",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src --shared ./node_modules/hof-template-partials/translations/src",
    "postinstall": "npm run build"
  },
  "author": "HomeOffice",
  "dependencies": {
    "browserify": "^12.0.1",
    "cached-path-relative": "^1.0.2",
    "deprecate": "^1.0.0",
    "diff": "^3.5.0",
    "fstream": "^1.0.12",
    "growl": "^1.10.0",
    "hof": "^18.2.4",
    "hof-behaviour-summary-page": "^3.1.0",
    "hof-build": "^1.3.4",
    "hof-controllers": "^4.0.1",
    "homeoffice-countries": "^0.1.0",
    "jquery": "^3.1.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.21",
    "nodemailer": "^6.4.16",
    "set-value": "^2.0.1",
    "tar": "^2.2.2",
    "typeahead-aria": "^1.0.1",
    "underscore": "^1.12.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "debug": "^2.2.0",
    "eslint": "^3.15.0",
    "eslint-config-homeoffice": "^2.0.0",
    "express": "^4.14.0",
    "istanbul": "^0.4.3",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0"
  },
  "pre-commit": [
    "lint",
    "style",
    "test",
    "cover"
  ]
}
